
<div class="container">
	<div class='row col-md-offset-4 col-md-4'>
		<h1>Schedule a Text</h1>
	</div>

	<div class="row">


		<%= form_for [@user, @savedMsg], :html => {:class => "newMsg"}  do |f| %>

			<div class='col-md-offset-3 col-md-6'>
				<%= f.telephone_field :send_num, placeholder: "Send To", autofocus: true, class: 'form-control phone-body' %>
			</div>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :subject, placeholder: "Subject", class: 'form-control subject-body' %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_area :content, placeholder: "Message", class: 'form-control content-body' %><br>
			</div>
			<div class='col-md-offset-4 col-md-4 form_element_sav' style="font-size:1.15em">
				<%= f.datetime_select :time, default: Time.now, ampm: true, class: "time-body" %>
			</div>
			<div class='col-md-offset-3 col-md-6'><br>
				<button type="submit" id="textButton" data-loading-text="Sending..." class="btn btn-primary form-control">Text It
				</button>
			</div>
		<% end %>
	</div><br>

	<hr class="featurette-divider"/><br>

	<%= render "shared/templates_saved" %>

	<hr class="featurette-divider"/><br>

		<div class="col-xs-2 text-center">
			<button class="alertSelf btn btn-md" id="self">
				<h5>Me</h5>
				<span style="display:none;" class="selfNum"><%= @user.phone_num %></span>
			</button>
		</div>

	<div class="row col-xs-offset-1 ">
		<% @user.contacts.each do |contact| %>
		<div class=" col-xs-1 text-center">
			<button class="contacts btn btn-md">
				<h5><%= contact.first_name %></h5>
				<span style ="display:none;" class ="phoneNum"><%= contact.phone_num %></span>
			</button> 		
		</div>
		<% end %>
	</div> <!-- Row Close -->

	<!-- <hr class="featurette-divider"/><br>	 -->


<!-- RENDER TIME TEMPLATE WHEN BUTTONS WORK -->


</div>